{
  "compilerOptions": {
    "module": "commonjs",
    "strict": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "removeComments": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"],
      "@server/*": ["./*"],
      "@domain/*": ["./src/domain/*"],
      "@shared/*": ["./src/shared/*"],
      "@filters/*": ["./src/filters/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@constants/*": ["./src/constants/*"],
      "@decorators/*": ["./src/decorators/*"],
      "@config/*": ["./src/config/*"],
    }
  }
}
